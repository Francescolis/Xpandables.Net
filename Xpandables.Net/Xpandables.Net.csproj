<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Platforms>x64</Platforms>
		<NeutralLanguage>fr-FR</NeutralLanguage>
		<SignAssembly>True</SignAssembly>
		<AssemblyOriginatorKeyFile>C:\Users\fewan\DevOps\Xpandables.Net\Xpandables.Net.snk</AssemblyOriginatorKeyFile>
		<ApplicationIcon>Xpandables.Net.ico</ApplicationIcon>
		<PackageIcon>Xpandables.Net.png</PackageIcon>
		<AnalysisLevel>preview-all</AnalysisLevel>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>Xpandables.Net</Title>
		<Authors>Francis-Black EWANE</Authors>
		<Company>Kamersoft.Net</Company>
		<Description>A utility library in .Net8.0 to easily add patterns such as Command, Query, Dispatcher, Interception...</Description>
		<Copyright>Copyright © 2023 Francis-Black EWANE</Copyright>
		<PackageProjectUrl>https://github.com/Francescolis/Xpandables.Net</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/Francescolis/Xpandables.Net</RepositoryUrl>
		<PackageReleaseNotes>Add Http Client Dispatcher</PackageReleaseNotes>
		<PackageOutputPath>C:\Users\fewan\DevOps\Nugets\</PackageOutputPath>
		<NeutralLanguage>en-GB</NeutralLanguage>
		<Version>8.0.0</Version>
		<AssemblyVersion>8.0.0</AssemblyVersion>
		<FileVersion>8.0.0</FileVersion>
		<PackageVersion>8.0.0</PackageVersion>
		<IncludeSymbols>True</IncludeSymbols>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
		<PackageTags>CQRS;DDD;Optional;Command;Query;Dispatcher;Aggregate;OperationResult;Decorator;Specification;State;HttpClient;Interception;Visitor</PackageTags>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
		<WarningLevel>9999</WarningLevel>
		<TreatWarningsAsErrors>True</TreatWarningsAsErrors>
		<CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
		<WarningLevel>9999</WarningLevel>
		<TreatWarningsAsErrors>True</TreatWarningsAsErrors>
		<CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="HostedServices\**" />
	  <EmbeddedResource Remove="HostedServices\**" />
	  <None Remove="HostedServices\**" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="Xpandables.Net.ico" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\.editorconfig" Link=".editorconfig" />
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\Xpandables.Net.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="DependencyInjection\" />
	</ItemGroup>

</Project>
